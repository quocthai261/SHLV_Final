<div class="modal fade" id="popupProDeCriteria" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="background: #00000080;">
    <div class="modal-dialog modal-md" style="max-height:90%; margin-top: 100px;">
        <div class="modal-content" style="max-height: 90%; overflow-y: auto;">
            <div class="modal-header">
                <h1 class="h4 mb-3 form-title"><strong>Thêm tiêu chí thăng/giáng chức</strong></h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Mã tiêu chí").Value("IFYP").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox()
                                .DataSource(d => d.WebApi().Area("Category").Controller("ProDeCriteria").LoadAction("GetUnitList"))
                                .Placeholder("Chọn đơn vị")
                                .ShowClearButton(true))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Tiêu đề tiêu chí").Value("Tổng IFYP trong tháng gia nhập").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().ColorBox()
                                .Value("#f05b41")
                                .ApplyButtonText("Apply")
                                .CancelButtonText("Decline")
                                .InputAttr("aria-label", "Custom button captions")
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <button class="btn btn-purple-style" type="submit">Tải biểu tượng</button>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().CheckBox().Value(true).IconSize(18).ElementAttr("aria-label", "Custom size")
                                .Text("Sử dụng")
                                )
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveProDeCriteria" onclick="onButtonSaveProDeCriteriaClicked()" type="button" class="btn btn-purple-style">Lưu</button>
                <button id="btnCloseProDeCriteria" onclick="onButtonCloseProDeCriteriaClicked()" type="button" class="btn btn-purple-style">Thoát</button>
            </div>
        </div>
    </div>
</div>

<script>

    function onButtonSaveProDeCriteriaClicked() {
        var modal = document.getElementById("popupProDeCriteria");
        modal.classList.remove("show", "in");
        modal.style.display = "none";

        notify("Cập nhật dữ liệu thành công", "success");
    }

    function onButtonCloseProDeCriteriaClicked() {
        var modal = document.getElementById("popupProDeCriteria");
        modal.classList.remove("show", "in");
        modal.style.display = "none";
    }

</script>