<div class="modal fade" id="popupDiagnosis" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="background: #00000080;">
    <div class="modal-dialog modal-md" style="max-height:90%; margin-top: 100px;">
        <div class="modal-content" style="max-height: 90%; overflow-y: auto;">
            <div class="modal-header">
                <h1 class="h4 mb-3 form-title"><strong>Thêm chuẩn đoán</strong></h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Mã chuẩn đoán").Value("Q50.4").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Tên chuẩn đoán").Value("Nang bào thai của vòi trứng (Q50.4)").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox().ElementAttr("class", "required-validation")
                                .ID("DiagnosisCategorySelectBoxCreateOrUpdate")
                                .DataSource(d => d.WebApi().Area("Category").Controller("DiagnosisCategory").LoadAction("GetDiagnosisCategoryList"))
                                .DisplayExpr("CategoryDescription")
                                .ValueExpr("DiagnosisCategoryId")
                                .Placeholder("Chọn danh mục")
                                .SearchEnabled(true).Label("Danh mục").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().CheckBox().Value(true).IconSize(18).ElementAttr("aria-label", "Custom size")
                                .Text("Sử dụng")
                                )
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveDiagnosis" onclick="onButtonSaveDiagnosisClicked()" type="button" class="btn btn-purple-style">Lưu</button>
                <button id="btnCloseDiagnosis" onclick="onButtonCloseDiagnosisClicked()" type="button" class="btn btn-purple-style">Thoát</button>
            </div>
        </div>
    </div>
</div>

<script>

    function onButtonSaveDiagnosisClicked() {
        var modal = document.getElementById("popupDiagnosis");
        modal.classList.remove("show", "in");
        modal.style.display = "none";

        notify("Cập nhật dữ liệu thành công", "success");
    }

    function onButtonCloseDiagnosisClicked() {
        var modal = document.getElementById("popupDiagnosis");
        modal.classList.remove("show", "in");
        modal.style.display = "none";
    }

</script>