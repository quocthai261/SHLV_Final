<div class="modal fade" id="popupFinancialQuestion" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="background: #00000080;">
    <div class="modal-dialog modal-md" style="max-height:90%; margin-top: 100px;">
        <div class="modal-content" style="max-height: 90%; overflow-y: auto;">
            <div class="modal-header">
                <h1 class="h4 mb-3 form-title"><strong>Thêm câu hỏi</strong></h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Mã câu hỏi").Value("HVCC-CHR-01").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox().ElementAttr("class", "required-validation")
                                .Label("Câu hỏi").Value("Gia đình Anh (Chị) có bao nhiêu con?").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50))
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox().ElementAttr("class", "required-validation")
                                .ID("FinancialQuestionCategorySelectBoxCreateOrUpdate")
                                .DataSource(d => d.WebApi().Area("Category").Controller("FinancialProductType").LoadAction("GetFinancialProductTypeList"))
                                .DisplayExpr("ProductTypeName")
                                .ValueExpr("ProductTypeCode")
                                .Placeholder("Chọn loại sản phẩm")
                                .SearchEnabled(true).Label("Sản phẩm").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().CheckBox().Value(true).IconSize(18).ElementAttr("aria-label", "Custom size")
                                .Text("Sử dụng")
                                )
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveFinancialQuestion" onclick="onButtonSaveFinancialQuestionClicked()" type="button" class="btn btn-purple-style">Lưu</button>
                <button id="btnCloseFinancialQuestion" onclick="onButtonCloseFinancialQuestionClicked()" type="button" class="btn btn-purple-style">Thoát</button>
            </div>
        </div>
    </div>
</div>

<script>

    function onButtonSaveFinancialQuestionClicked() {
        var modal = document.getElementById("popupFinancialQuestion");
        modal.classList.remove("show", "in");
        modal.style.display = "none";

        notify("Cập nhật dữ liệu thành công", "success");
    }

    function onButtonCloseFinancialQuestionClicked() {
        var modal = document.getElementById("popupFinancialQuestion");
        modal.classList.remove("show", "in");
        modal.style.display = "none";
    }

</script>