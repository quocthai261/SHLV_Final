<div class="modal fade" id="popupSalePlanConfig" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="background: #00000080;">
    <div class="modal-dialog modal-md" style="max-height:90%; margin-top: 100px;">
        <div class="modal-content" style="max-height: 90%; overflow-y: auto;">
            <div class="modal-header">
                <h1 class="h4 mb-3 form-title"><strong>Thêm kế hoạch kinh doanh</strong></h1>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox().ElementAttr("class", "required-validation")
                                .DataSource(d => d.WebApi().Area("Category").Controller("SalePlanTypes").LoadAction("GetSalePlanTypesList"))
                                .DisplayExpr("Title")
                                .ValueExpr("SalePlanTypesId")
                                .Placeholder("Chọn loại kế hoạch")
                                .SearchEnabled(true).Label("Loại kế hoạch").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true)
                                )
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().SelectBox().ElementAttr("class", "required-validation")
                                .ID("SalePlanConfigCategorySelectBoxCreateOrUpdate")
                                .DataSource(d => d.WebApi().Area("Category").Controller("Position").LoadAction("GetPositionList"))
                                .DisplayExpr("PositionName")
                                .ValueExpr("PositionId")
                                .Placeholder("Chọn vị trí")
                                .SearchEnabled(true).Label("Vị trí").LabelMode(EditorLabelMode.Floating)
                                .ShowClearButton(true)
                                )
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox()
                                .Label("Ngày được phép tạo").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50).ShowClearButton(true))
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().TextBox()
                                .Label("Ngày được phép sửa").LabelMode(EditorLabelMode.Floating)
                                .MaxLength(50).ShowClearButton(true))
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            @(Html.DevExtreme().CheckBox().Value(true).IconSize(18).ElementAttr("aria-label", "Custom size")
                                .Text("Sử dụng")
                                )
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveSalePlanConfig" onclick="onButtonSaveSalePlanConfigClicked()" type="button" class="btn btn-purple-style">Lưu</button>
                <button id="btnCloseSalePlanConfig" onclick="onButtonCloseSalePlanConfigClicked()" type="button" class="btn btn-purple-style">Thoát</button>
            </div>
        </div>
    </div>
</div>

<script>

    function onButtonSaveSalePlanConfigClicked() {
        var modal = document.getElementById("popupSalePlanConfig");
        modal.classList.remove("show", "in");
        modal.style.display = "none";

        notify("Cập nhật dữ liệu thành công", "success");
    }

    function onButtonCloseSalePlanConfigClicked() {
        var modal = document.getElementById("popupSalePlanConfig");
        modal.classList.remove("show", "in");
        modal.style.display = "none";
    }

</script>